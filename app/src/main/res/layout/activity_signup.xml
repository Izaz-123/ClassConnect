<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="50dp"
        android:paddingBottom="40dp">

        <!-- App Logo & Branding -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/classconnect_logo"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ClassConnect"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Collaboration Platform"
            android:textColor="#B3D1FF"
            android:textSize="13sp"
            android:letterSpacing="0.05"
            android:layout_marginBottom="28dp"/>

        <!-- SIGNUP CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/signupCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="28dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Create Account âœ¨"
                    android:textColor="#0A1628"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Join your class community today"
                    android:textColor="#7A8FAF"
                    android:textSize="13sp"
                    android:layout_marginBottom="22dp"/>

                <!-- Full Name -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Full Name"
                    android:textColor="#3A4A6B"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundColor="#F4F7FF"
                    app:boxStrokeColor="#1565C0"
                    app:boxStrokeWidth="1.5dp"
                    app:hintEnabled="false"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etFullName"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Enter your full name"
                        android:inputType="textPersonName|textCapWords"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:textSize="15sp"
                        android:textColor="#0A1628"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Registration Number -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Registration Number"
                    android:textColor="#3A4A6B"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundColor="#F4F7FF"
                    app:boxStrokeColor="#1565C0"
                    app:boxStrokeWidth="1.5dp"
                    app:hintEnabled="false"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etRegNumber"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="e.g. 20-SE-001"
                        android:inputType="textCapCharacters"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:textSize="15sp"
                        android:textColor="#0A1628"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section"
                    android:textColor="#3A4A6B"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundColor="#F4F7FF"
                    app:boxStrokeColor="#1565C0"
                    app:boxStrokeWidth="1.5dp"
                    app:hintEnabled="false"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etSection"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="e.g. K22MS"
                        android:inputType="textCapCharacters"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:textSize="15sp"
                        android:textColor="#0A1628"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Address"
                    android:textColor="#3A4A6B"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxBackgroundColor="#F4F7FF"
                    app:boxStrokeColor="#1565C0"
                    app:boxStrokeWidth="1.5dp"
                    app:hintEnabled="false"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="you@email.com"
                        android:inputType="textEmailAddress"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:textSize="15sp"
                        android:textColor="#0A1628"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textColor="#3A4A6B"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:boxBackgroundColor="#F4F7FF"
                    app:boxStrokeColor="#1565C0"
                    app:boxStrokeWidth="1.5dp"
                    app:hintEnabled="false"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#1565C0"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:boxCornerRadiusTopStart="14dp"
                    app:boxCornerRadiusTopEnd="14dp"
                    app:boxCornerRadiusBottomStart="14dp"
                    app:boxCornerRadiusBottomEnd="14dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="Minimum 6 characters"
                        android:inputType="textPassword"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:textSize="15sp"
                        android:textColor="#0A1628"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A verification email will be sent after registration."
                    android:textColor="#9AAAC8"
                    android:textSize="12sp"
                    android:layout_marginBottom="20dp"/>

                <!-- Register Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:text="Create Account"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    app:backgroundTint="#1565C0"
                    app:cornerRadius="14dp"
                    app:elevation="4dp"/>

                <!-- Login Link -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already have an account? "
                        android:textColor="#7A8FAF"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tvLoginLink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sign In"
                        android:textColor="#1565C0"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
